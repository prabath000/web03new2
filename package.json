{
  "name": "web03-portfolio",
  "version": "1.0.0",
  "description": "Portfolio website with Node.js backend and MongoDB",
  "main": "index.html",
  "scripts": {
    "start": "node server/server.js",
    "dev": "concurrently \"npm run dev-server\" \"npm run serve-frontend\"",
    "dev-server": "cd server && npm run dev",
    "serve-frontend": "npx serve .",
    "install-server": "cd server && npm install",
    "build": "echo 'No build step required for static site'"
  },
  "keywords": [
    "portfolio",
    "mongodb",
    "express",
    "nodejs"
  ],
  "author": "Prabath",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "mongodb": "^7.0.0"
  }
}
